<div class="row">
	<div class="col-lg-4 col-md-4 col-sm-6 col-lg-offset-4 col-md-offset-4 text-center">
		<%=link_to 'Create Mission', new_mission_path, class:'btn btn-primary'%>
	</div>
	

	<div class="col-lg-12 col-md-12 col-sm-12 mission-board">
		<%@missions.each do |mis|%>
			<div class="pillar col-lg-3 col-md-3 col-sm-6">
				<div class="title">	
				<%=link_to mis.name, mission_path(mis)%>
				</div>
				<div class="body">
					<table class="table">
					<th>Task Name</th>
					<th>Accomplished?</th>
					<tbody>
						
					<%mis.tasks.each do |task| %>
						<tr>
							<td><%=link_to task.title, mission_task_path(mis, task)%></td>
							<td><%=task.accomplished%></td>
						</tr>
					<%end%>
					</tbody>	
					</table>
				</div>	
			</div>
		<%end%>
	</div>
</div>
