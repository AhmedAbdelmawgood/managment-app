<%=form_for @task, url:mission_tasks_path, method: :post do |f|%>
		<div class="form-group">
			<%=f.label 'Title'%>
			<%=f.text_field :title, class:'form-control'%>
		</div>
		<div class="form-group">
			<%=f.label 'Description'%>
			<%=f.text_area :description, class:'form-control'%>
		</div>
		<div class="form-group">
			<%=f.label 'Priority'%>
			<%=f.number_field :priority, class:'form-control'%>
		</div>
		<%=f.submit 'Create Task', class:'btn btn-warning'%>		
<%end%>